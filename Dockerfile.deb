FROM --platform=linux/amd64 rust:1.85-slim

RUN apt-get update && apt-get install -y \
    build-essential \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

RUN cargo install cargo-deb

WORKDIR /app

COPY . .

RUN cargo build --release -p thunder-server

RUN cargo deb -p thunder-server --no-build

CMD ["ls", "-la", "target/debian/"]
